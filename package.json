{
	"name": "sveltekit-kql",
	"version": "0.0.1",
	"license": "MIT",
	"author": {
		"name": "Jona van der Vlist",
		"email": "j.vdv@outlook.com"
	},
	"description": "SvelteKit adapter for Kirby query language (kql)",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && bun run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package -w && publint",
		"prepublishOnly": "bun run package",
		"test": "bun run test:integration && bun run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:integration": "playwright test",
		"test:unit": "vitest --ui --typecheck",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/server/index.js"
		},
		"./blocks": {
			"svelte": "./dist/index.js",
			"import": "./dist/Blocks/index.js"
		},
		"./kql": {
			"types": "./dist/kql/index.d.ts",
			"import": "./dist/kql/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"README.md",
		"*.d.ts"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"kirby-types": "^0.7.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.46.1",
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/package": "^2.3.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.0",
		"@types/bun": "^1.1.8",
		"kirby-types": "^0.7.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.1.16",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.7.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.4",
		"@vitest/ui": "^2.1.2",
		"vitest": "^1.6.0"
	},
	"packageManager": "bun@1.1.31",
	"engines": {
		"node": ">=18",
		"bun": ">=1.0.29"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/test.d.ts",
	"type": "module"
}
